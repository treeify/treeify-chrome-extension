{
  "manifest_version": 3,
  "version": "0.2.0",
  "name": "Treeify",
  "description": "大量のメモ、タブ、ブックマークをまとめてスマートに管理",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "app-icon/16px.png"
    },
    "default_title": "Treeify",
    "default_popup": "BrowserAction/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": true,
      "js": [
        "ContentScript/entryPoint.js"
      ],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "show-treeify-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Treeifyタブに切り替え"
    },
    "close-tab-and-show-treeify-tab": {
      "suggested_key": {
        "default": "Ctrl+W"
      },
      "description": "閲覧中のタブを閉じてTreeifyタブに切り替え"
    }
  },
  "icons": {
    "16": "app-icon/16px.png",
    "48": "app-icon/48px.png",
    "128": "app-icon/128px.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "tabs",
    "scripting",
    "contextMenus",
    "bookmarks"
  ]
}